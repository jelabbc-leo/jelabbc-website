{
  "name": "JELA Dev Container",
    "image": "mcr.microsoft.com/devcontainers/dotnet:1-8.0",  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-playwright.playwright"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "dotnet.defaultSolution": "JelaWeb.sln"
      }
    }
  },
  "forwardPorts": [5000, 5001]
}